<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <% flash.each do |message_type, msg| %>
        <div class="mt-4 alert alert-<%= message_type %>"><%= msg %></div>
      <% end %>
      <h3 class="staff-index text-center"><%= "#{@store.store_name} " %>のスタッフ一覧</h3>
      <h6 class="staff-ranges text-center">＊出張範囲を編集したいスタッフを選んでください</h5>   
      
      <table class="table">
        <% @masseurs.each do |masseur| %>
          <tbody>
            <tr>
              <td class="align-middle"><%= link_to "#{masseur.masseur_name}", store_manager_business_trip_ranges_show_path(masseur) %></td>
              <td class="text-right">
                <%= link_to "出張範囲の編集", store_manager_business_trip_ranges_edit_path(masseur), class:"btn btn-outline-primary" %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <div class="btn-index">
        <%= link_to "登録内容の編集に戻る", store_managers_show_path(current_store_manager) %>
      </div>
    </div>
  </div>
</div>