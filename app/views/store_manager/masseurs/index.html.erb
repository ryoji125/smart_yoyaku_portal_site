<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <% flash.each do |message_type, msg| %>
        <div class="mt-4 alert alert-<%= message_type %>"><%= msg %></div>
      <% end %>
      <h3 class="my-5 text-center"><%= "#{@store.store_name} " %>の登録マッサージ師一覧</h3>    
      
      <table class="table">
        <% @masseurs.each do |masseur| %>
          <tbody>
            <tr>
              <td class="align-middle"><%= masseur.masseur_name %></td>
              <td class="text-right">
                <%= link_to "登録情報の編集", edit_store_manager_masseur_path(masseur), class:"btn btn-outline-primary" %>
                <%#= link_to "削除", store_manager_masseur_path(masseur), method: :delete,
                data: { confirm: "#{masseur.masseur_name} を削除しますか？" } , class:"btn btn-outline-danger" %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <!--
      <div class="text-right my-4 mr-2">
        <%= link_to "新しいマッサージ師を登録する", new_store_manager_masseur_path, class:"btn btn-primary" %>
      </div>
      -->
      <br><br>
      <%= link_to "登録内容の編集に戻る", store_managers_show_path(current_store_manager) %><br><br><br>
    </div>
  </div>
</div>